/* 日历容器 */
.calendar-container {
  padding: 20rpx;
  font-family: sans-serif;
  background: #fafafa;
}

/* 头部年月切换 */
.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.month-btn {
  padding: 10rpx 20rpx;
  background: #e8e7e7;
  border: none;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
}
.current-month {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 日历网格 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}
.calendar-weekday {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 0;
}

/* 日期格子 */
.calendar-day {
  aspect-ratio: 1; /* 正方形格子 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 8rpx;
  position: relative;
  cursor: pointer;
}
/* 当前月日期样式 */
.current-month {
  background: #fff;
  color: #333;
}
/* 其他月日期样式 */
.other-month {
  color: #ccc;
  background: #fafafa;
}
/* 今天样式 */
.today {
  font-weight: bold;
}
/* 选中日期样式 */
.selected {
  background: #fffbe6;
  border: 2rpx solid #ffcc00;
}
.day-number {
  z-index: 1;
}

/* 日记指示器（小红点） */
.diary-indicator {
  position: absolute;
  bottom: 10rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  z-index: 2;
}

/* 日记编辑区域 */
.diary-section {
  margin-top: 40rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.section-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #333;
}
.diary-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.save-diary-btn {
  width: 100%;
  padding: 20rpx 0;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 加载提示 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.1);
}
/* 加载动画（CSS实现，无需图片） */
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}
.loading-text {
  font-size: 26rpx;
  color: #666;
}

/* 加载动画关键帧 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}