/* 登录页面容器 */
.login-container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f7fa;
}

/* 标题 */
.login-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 副标题 */
.login-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 80rpx;
  text-align: center;
}

/* 用户信息预览区 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

/* 用户头像 */
.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

/* 用户名 */
.user-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

/* 授权按钮 */
.auth-btn {
  width: 80%;
  height: 90rpx;
  background-color: #2ecc71;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

/* 进入首页按钮 */
.enter-btn {
  width: 60%;
  height: 80rpx;
  background-color: #3498db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 按钮 hover 效果 */
.btn-hover {
  opacity: 0.9;
  transform: scale(1.02);
}

/* 用户协议链接 */
.agreement-link {
  font-size: 24rpx;
  color: #3498db;
  margin-top: 40rpx;
  text-decoration: underline;
}

/* 用户协议弹窗遮罩 */
.agreement-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

/* 用户协议弹窗容器 */
.agreement-container {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 协议标题 */
.agreement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 协议内容滚动区 */
.agreement-content {
  height: 400rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 协议确认按钮 */
.agreement-confirm {
  width: 100%;
  height: 80rpx;
  background-color: #2ecc71;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 加载内容 */
.loading-content {
  background-color: #fff;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

/* 加载动画（旋转圆圈） */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #2ecc71;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* 加载文字 */
.loading-text {
  font-size: 28rpx;
  color: #333;
}

/* 旋转动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}