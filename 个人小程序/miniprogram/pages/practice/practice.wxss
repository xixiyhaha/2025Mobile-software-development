/* 练歌房样式 */
.practice-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.song-info {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.song-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.song-singer {
  font-size: 26rpx;
  color: #666;
}

.lyrics-container {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.current-lyric {
  font-size: 32rpx;
  color: #07c160;
  margin: 20rpx 0;
  text-align: center;
}

.other-lyric {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
  text-align: center;
}

.control-panel {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin: 30rpx 0;
}

.mode-switch {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.mode-btn {
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.mode-btn.active {
  background-color: #07c160;
  color: #fff;
}

.record-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.videos-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.video-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.video-item {
  width: calc(50% - 10rpx);
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff;
}

.video-thumb {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.video-title {
  padding: 10rpx;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}