.edit-container {
  padding: 20px;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.label {
  width: 80px;
  font-size: 16px;
  color: #333;
}

.input {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 8px 10px;
  font-size: 14px;
}

.avatar-item {
  justify-content: space-between;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: #eee;
}

.picker {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 8px 10px;
  font-size: 14px;
}

.save-btn {
  width: 100%;
  background-color: #07c160;
  color: #fff;
  padding: 12px 0;
  border-radius: 6px;
  font-size: 16px;
}
