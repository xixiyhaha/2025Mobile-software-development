<view class="edit-container">
  <!-- 头像选择 -->
  <view class="form-item avatar-item">
    <text class="label">头像</text>
    <image class="avatar" src="{{avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill" />
    <button class="choose-btn" bindtap="chooseAvatar">更换头像</button>
  </view>

  <!-- 昵称 -->
  <view class="form-item">
    <text class="label">昵称</text>
    <input
      class="input"
      placeholder="请输入昵称"
      value="{{nickName}}"
      bindinput="onInputChange"
      data-field="nickName"
    />
  </view>

  <!-- 性别 -->
  <view class="form-item">
    <text class="label">性别</text>
    <radio-group bindchange="onGenderChange">
      <label>
        <radio value="1" checked="{{gender === 1}}" /> 男
      </label>
      <label>
        <radio value="2" checked="{{gender === 2}}" /> 女
      </label>
      <label>
        <radio value="0" checked="{{gender === 0}}" /> 保密
      </label>
    </radio-group>
  </view>

  <!-- 保存按钮 -->
  <button class="save-btn" bindtap="saveUserInfo">保存资料</button>
</view>
