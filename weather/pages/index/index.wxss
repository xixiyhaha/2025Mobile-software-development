/* 基础容器样式 */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start; /* 改为从上到下排列 */
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    background-color: #f5f7fa;
}

/* 地区选择器样式 */
.location-container {
    width: 100%;
    margin-bottom: 50rpx;
}

.region-picker {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40rpx 20rpx;
    background-color: white;
    border-radius: 10rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.region-text {
    font-size: 42rpx;
    color: #333;
    font-weight: 520;
}

.arrow-icon {
    margin-left: 15rpx;
    opacity: 0.6;
}

/* 温度和天气状态文本样式 */
.temp-weather-container {
    display: flex;
    align-items: center;
    margin-bottom: 0rpx;
}

.temp-text {
    font-size: 110rpx;
    color: #3C5F81;
    font-weight: 400;
    line-height: 2;
}

.weather-text {
    font-size: 60rpx;
    color: #3C5F81;
    font-weight: 500;
    margin-left: 50rpx;
}

/* 天气图标样式 */
.weather-icon {
    width: 300rpx;
    height: 300rpx;
    margin-bottom: 10rpx;
    transition: transform 0.3s ease;
}

.weather-icon:active {
    transform: scale(1.3);
}

/* 体感温度等补充信息 */
.feels-like {
    font-size: 35rpx;
    color: #666;
    margin-bottom: 40rpx;
    padding: 10rpx 20rpx;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 20rpx;
}

/* 详细信息区域样式 */
.detail {
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: white;
    border-radius: 30rpx;
    padding: 30rpx 20rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
    margin-top: auto; /* 推到页面底部 */
}

/* 详细信息行样式 */
.bar {
    display: flex;
    flex-direction: row;
    margin: 25rpx 0;
}

/* 详细信息单元格样式 */
.box {
    width: 33.3%;
    text-align: center;
    padding: 0 10rpx;
}

/* 详细信息标签样式（湿度、气压等） */
.box.label {
    color: #888;
    font-size: 28rpx;
    font-weight: 400;
}

/* 详细信息值样式 */
.box.value {
    color: #333;
    font-size: 32rpx;
    font-weight: 500;
}


